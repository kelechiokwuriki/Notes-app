<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="8dp"
    android:layout_margin="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:padding="8dp"
        android:id="@+id/linearLayout"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <!--<ImageView-->
            <!--android:id="@+id/noteImageInCard"-->
            <!--android:src="@drawable/ic_image_black_24dp"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="70dp" />-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/noteTitleIdCardView"
                android:text="Note title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toStartOf="@id/dateTextInCardView"
                android:textSize="17sp"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/noteTextIdCardView"
                android:text="Note text"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
                android:id="@+id/dateTextInCardView"
                android:layout_alignParentEnd="true"
                android:text="2/2/2019 12:10:29"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        <!--</LinearLayout>-->



    </RelativeLayout>
</android.support.v7.widget.CardView>




